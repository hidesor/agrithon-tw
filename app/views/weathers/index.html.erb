<p id="notice"><%= notice %></p>

<h1>天氣資料</h1>

<table>
  <thead>
    <tr>
      <th>測站</th>
      <th>時間</th>
      <th>均溫</th>
      <th>雨量(mm)</th>
      <th>降雨日數(天)</th>
      <th>日照時數(hr)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weathers.each do |weather| %>
      <tr>
        <td><%= weather.name_a %></td>
        <td><%= weather.date_a %></td>
        <td><%= weather.num_a %></td>
        <td><%= weather.num_b %></td>
        <td><%= weather.num_c %></td>
        <td><%= weather.num_d %></td>
        <td><%= link_to 'Show', weather %></td>
        <td><%= link_to 'Edit', edit_weather_path(weather) %></td>
        <td><%= link_to 'Destroy', weather, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

