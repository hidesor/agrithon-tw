<p id="notice"><%= notice %></p>

<h1>Listing Weather Tests</h1>

<table>
  <thead>
    <tr>
      <th>Date a</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_tests.each do |weather_test| %>
      <tr>
        <td><%= weather_test.date_a %></td>
        <td><%= link_to 'Show', weather_test %></td>
        <td><%= link_to 'Edit', edit_weather_test_path(weather_test) %></td>
        <td><%= link_to 'Destroy', weather_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

